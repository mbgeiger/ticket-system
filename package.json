{
    "name": "ticket-system",
    "homepage": "https://mbgeiger.github.com/ticket-system",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "axios": "^0.18.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.16.4",
        "mongoose": "^5.5.4",
        "passport": "^0.4.0",
        "yargs": "^13.2.2",
        "yarn": "^1.15.2"
    },
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
        "client": "cd client && npm run start",
        "install": "cd client && npm install",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "concurrently": "^4.1.0",
        "dom-to-react": "^1.0.0",
        "if-env": "^1.0.4",
        "nodemon": "^1.18.11"
    }
}
